@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "에러 페이지";
}

<div class="p-3">
    <div class="mt-5" style="min-height:300px;">
        <h4 class="mb-4 text-center">
            요청을 처리하는 중 오류가 발생했습니다.
        </h4>
        <h5 class="text-center">
            <b>@Model.Exception.Message</b>
        </h5>
        <br />
        <br />
    </div>

    <div class="d-flex justify-content-center">
        <a href="javascript:history.go(-1)" class="btn btn-outline-success mr-3">이전 페이지</a>
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-success">보드몰 홈</a>
    </div>
</div>
